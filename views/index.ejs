<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>ChatGPT Clone</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Google Fonts for styling -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet"> 
    <!-- Highlight.js CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.8.0/styles/atom-one-dark.min.css">
    <!-- Stylesheet -->
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="chat-container">
        <!-- Sidebar -->
        <div class="sidebar">
            <button class="new-chat-btn" id="new-chat-btn">+ New Chat</button>
            <div id="chat-list">
                <!-- Chat list will be populated here -->
            </div>
            <form action="/logout" method="POST">
                <button type="submit" class="logout-btn">Logout</button>
            </form>
            <p class="username-display">Logged in as: <%= username %></p>
        </div>
        <!-- Main Chat Area -->
        <div class="main">
            <div class="chat-content">
                <div id="chat-box" class="chat-box">
                    <!-- Chat messages will be appended here by script.js -->
                </div>
                <!-- Input Area -->
                <div class="input-area">
                    <form id="chat-form">
                        <textarea id="user-input" placeholder="Send a message..."></textarea>
                        <button id="send-btn" type="submit">
                            <!-- Send Icon -->
                            <svg viewBox="0 0 24 24" class="send-icon">
                                <path d="M2,21L23,12L2,3V10L17,12L2,14V21Z" />
                            </svg>
                        </button>
                    </form>
                    <p class="footer-text">RidgeGPT - Not affiliated with OpenAI</p>
                </div>
            </div>
        </div>
    </div>
    <!-- Highlight.js Library -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.8.0/highlight.min.js"></script>
    <!-- Marked.js Library -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/marked/4.3.0/marked.min.js"></script>
    <!-- Script -->
    <script src="/script.js"></script>
</body>
</html>
